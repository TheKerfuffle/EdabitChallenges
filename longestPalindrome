var longestPalindrome = function (s) {
  let longestPal = "";

  const checkPal = (l, r) => {
    while (l >= 0 && r < s.length && s[l] === s[r]) {
      l--;
      r++;

      if (r - l > longestPal.length) {
        longestPal = s.slice(l + 1, r);
      }
    }
  };

  for (let i = 0; i < s.length; i++) {
    checkPal(i, i);
    checkPal(i, i + 1);
  }

  return longestPal;
};

console.log(longestPalindrome("babadababab"));
// console.log(longestPalindrome(""));
// console.log(longestPalindrome("cbbd"));
